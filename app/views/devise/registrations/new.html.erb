<%= render "devise/shared/error_messages", resource: resource %>

<div class="login-container">
  <link href="https://fonts.googleapis.com/css?family=Manjari|Monoton&display=swap" rel="stylesheet"></link>
  <div class="form-container">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <p class="login-title">Sign Up</p>
      <hr class="login-hr"></hr>

      <div class="field">
        <%= f.label :username %><br />
        <%= f.text_field :username, autofocus: true, class: "input-small" %>
      </div>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input-small" %>
      </div>

      <div class="field">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "input-small" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input-small" %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up", class: "login-button" %>
      </div>
    <% end %>
  </div>
</div>
