<%= render "devise/shared/error_messages", resource: resource %>

<div class="login-container">
  <link href="https://fonts.googleapis.com/css?family=Manjari|Monoton&display=swap" rel="stylesheet"></link>
  <div class="form-container">
    <h2 class='edit-user-title'>Edit <%= resource_name.to_s.humanize %></h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name),  method: :put ) do |f| %>

      <div class="field">
        <%= f.label :username %><br/>
        <%= f.text_field :username, autofocus: true, autocomplete: "username", class: "input-small" %>
      </div>

      <div class="field">
        <%= f.label :email %><br/>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input-small" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="field">
        <%= f.label :password %><br/>
        <%= f.password_field :password, autocomplete: "new-password", class: "input-small"%>
        <% if @minimum_password_length %>
        <br />
        <em><%= @minimum_password_length %> characters minimum</em>
        <% end %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %><br/>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input-small" %>
      </div>

      <div class="field">
        <%= f.label "Profile photo" %>
        <br />
        <%= f.file_field :avatar, class: "input-small" %>
      </div>

      <div class="field">
        <%= f.label :current_password %>
        <br />
        <%= f.password_field :current_password, autocomplete: "current-password", class: "input-small" %>
      </div>

      <div class="actions">
        <%= f.submit "Update", class: "login-button"%>
      </div>
      <div class="cancel-link-edit-user">
        <%= link_to "Cancel", "/" %>
        |
        <%= link_to "Delete", registration_path(resource_name), data: { confirm: "Are you sure you want to delete #{current_user.username}'s profile?" }, method: :delete, class: "delete-button" %><br/>
      </div>
    <% end %>
    <%= image_tag @user.avatar %>
  </div>
</div>
